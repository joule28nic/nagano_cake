<div class="container">
  <div class="row py-4">
    <div class="col-4 text-center">
      <h3>配送先編集</h3>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12 col-lg-11 px-5 px-sm-0 mx-auto">
      <%= form_with model: @address do |f| %>

        <div class="field row mb-3">
          <label for="postal_code" class="col-sm-3 col-form-label">郵便番号(ハイフンなし)</label>
          <%= f.text_field :postal_code, class: "col-sm-3", id: "postal_code" %>
        </div>

        <div class="field row mb-3">
          <label for="address" class="col-sm-3 col-form-label">住所</label>
          <%= f.text_field :address, class: "col-sm-7", id: "address" %>
        </div>

        <div class="field row mb-5">
          <label for="name" class="col-sm-3 col-form-label">宛名</label>
          <%= f.text_field :name, class: "col-sm-3", id: "name" %>

          <div class="actions col-3 offset-3">
            <%= f.submit "変更内容を保存", class: "btn btn-success" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

</div>