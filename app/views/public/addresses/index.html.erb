<div class="container">
  <div class="row py-4">
    <div class="col-4 text-center">
      <h3>配送先登録 / 一覧</h3>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12 col-lg-11 px-5 px-sm-0 mx-auto">
      <%= form_with model: @address, url: addresses_path(@addresses) do |f| %>

        <div class="field row mb-3">
          <label for="postal_code" class="col-sm-3 col-form-label">郵便番号(ハイフンなし)</label>
          <%= f.text_field :postal_code, class: "col-sm-3", id: "postal_code", placeholder: "0000000" %>
        </div>

        <div class="field row mb-3">
          <label for="address" class="col-sm-3 col-form-label">住所</label>
          <%= f.text_field :address, class: "col-sm-7", id: "address", placeholder: "東京都渋谷区代々木神園町0-0" %>
        </div>

        <div class="field row mb-5">
          <label for="name" class="col-sm-3 col-form-label">宛名</label>
          <%= f.text_field :name, class: "col-sm-3", id: "name", placeholder: "令和道子" %>

          <div class="actions col-2 offset-4">
            <%= f.submit "新規登録", class: "btn btn-success" %>
          </div>
        </div>
      <% end %>

      <div class="row">
        <div class="col-10">
          <table class="table table-bordered">
            <thead class="table-active">
              <tr>
                <th style="width: 15%">郵便番号</th>
                <th style="width: 40%">住所</th>
                <th style="width: 15%">宛名</th>
                <th style="width: 30%"></th>
              </tr>
            </thead>
            <tbody>
              <% @addresses.each do |address| %>
                <tr>
                  <td class="align-middle"><%= address.postal_code %></td>
                  <td class="align-middle"><%= address.address %></td>
                  <td class="align-middle"><%= address.name %></td>
                  <td class="align-middle">
                    <%= link_to "編集する", edit_address_path(address), class: "btn btn-success" %>
                    <%= link_to "削除する", address_path(address), class: "btn btn-danger", method: :delete, "data-confirm" => "本当に削除しますか？" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>

    </div>
  </div>

</div>