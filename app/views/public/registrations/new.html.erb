<div class="container">
  <div class="row p-4">
    <div class="col-4 text-center">
      <h3>新規会員登録</h3>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12 col-lg-11 px-5 px-sm-0 mx-auto">
      <%= form_with(model: resource, local: true, url: registration_path(resource_name)) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>

        <div class="field row my-3">
          <label for="last_name" class="col-sm-3 col-form-label">名前</label>
          <label for="last_name" class="col-sm-1 col-form-label">(姓)</label>
          <%= f.text_field :last_name, autofocus: true, class: "col-sm-3", placeholder: "令和" %>
          <label for="first_name" class="col-sm-1 col-form-label">(名)</label>
          <%= f.text_field :first_name, class: "col-sm-3", placeholder: "道子" %>
        </div>

        <div class="field row mb-3">
          <label for="last_name_kana" class="col-sm-3 col-form-label">フリガナ</label>
          <label for="last_name_kana" class="col-sm-1 col-form-label">(セイ)</label>
          <%= f.text_field :last_name_kana, class: "col-sm-3", placeholder: "レイワ" %>
          <label for="first_name_kana" class="col-sm-1 col-form-label">(メイ)</label>
          <%= f.text_field :first_name_kana, class: "col-sm-3", placeholder: "ミチコ" %>
        </div>

        <div class="field row mb-3">
          <label for="email" class="col-sm-4 col-form-label">メールアドレス</label>
          <%= f.email_field :email, class: "col-sm-3", placeholder: "sample@example.com" %>
        </div>

        <div class="field row mb-3">
          <label for="postal_code" class="col-sm-4 col-form-label">郵便番号(ハイフンなし)</label>
          <%= f.text_field :postal_code, class: "col-sm-3", placeholder: "0000000" %>
        </div>

        <div class="field row mb-3">
          <label for="address" class="col-sm-4 col-form-label">住所</label>
          <%= f.text_field :address, class: "col-sm-7", placeholder: "東京都渋谷区代々木神園町0-0" %>
        </div>

        <div class="field row mb-3">
          <label for="telephone_number" class="col-sm-4 col-form-label">電話番号(ハイフンなし)</label>
          <%= f.text_field :telephone_number, class: "col-sm-3", placeholder: "0000000000" %>
        </div>

        <div class="field row mb-3">
          <label for="password" class="col-sm-4 col-form-label">パスワード
          <% if @minimum_password_length %>
          <em class="col-form-label">(<%= @minimum_password_length %>文字以上)</em>
          <% end %></label>
          <%= f.password_field :password, class: "col-sm-3", autocomplete: "new-password" %>
        </div>

        <div class="field row mb-4">
          <label for="password_confirmation" class="col-sm-4 col-form-label">パスワード(確認用)</label>
          <%= f.password_field :password_confirmation, class: "col-sm-3", autocomplete: "new-password" %>
        </div>

        <div class="actions">
          <%= f.submit "新規登録", class: "btn btn-success col-3 offset-4 mb-3" %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="row p-4">
    <div class="col-4 text-center">
      <h3>既に登録済みの方</h3>
    </div>
  </div>

  <div class="row">
    <div class="col offset-1">
      <%= render "public/shared/links" %>
      <span>からログインしてください。</span>
    </div>
  </div>
</div>