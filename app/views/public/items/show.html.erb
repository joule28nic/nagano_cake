<div class="container">
  <div class="row mt-5">

    <div class="col-2 border border-dark">
      <p class="border-bottom border-dark text-center py-2">ジャンル検索</p>
      <% @genres.each do |genre| %>
        <p><%= genre.name %></p>
      <% end %>
    </div>

    <div class="col-4">
      <%= image_tag @item.get_image, class:"img-fluid w-100" %>
    </div>

    <div class="col-6">
      <div class="row mx-2">
        <div class="col">
          <h3><%= @item.name %></h3>
        </div>
      </div>
      <div class="row mx-2">
        <div class="col">
          <p><%= @item.introduction %></p>
        </div>
      </div>
      <div class="row mx-2">
        <div class="col">
          <h4 class="mb-0 d-inline-block">¥ <%= @item.add_tax_price %></h4>
          <span class="mb-0 d-inline-block">(税込)</span>
        </div>
      </div>
    </div>
  </div>
</div>