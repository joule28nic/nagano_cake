<div class="container">
  <div class="row pt-5">

    <div class="col-2 border border-dark">
      <p class="border-bottom border-dark text-center py-2">ジャンル検索</p>
      <% @genres.each do |genre| %>
        <p><%= genre.name %></p>
      <% end %>
    </div>

    <div class="col-10">
      <div class="row px-5 mb-2">
        <h3 class="m-0">商品一覧</h3>
        <p class="d-flex align-items-end m-0">(全<%= Item.count %>件)</p>
      </div>

      <div class="row px-5 mb-4 d-flex flex-wrap">
        <% @items.each do |item| %>
          <div class="col-3 mb-4">
            <div class="row">
              <div class="col">
                <%= link_to item_path(item.id) do %>
                  <%= image_tag item.get_image, class:"img-fluid w-100" %>
                <% end %>
              </div>
            </div>
            <div class="row">
              <div class="col">
                <%= link_to item.name, item_path(item) %>
              </div>
            </div>
            <div class="row">
              <div class="col">
                <span>¥</span><%= item.with_tax_price.to_s(:delimited, delimiter: ',') %>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <div class="row">
        <div class="col d-flex justify-content-center">
          <%= paginate @items, theme: 'twitter-bootstrap-4' %>
        </div>
      </div>
    </div>
  </div>
</div>