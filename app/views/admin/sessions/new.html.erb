<div class="container">
  <div class="row p-4">
    <div class="col-4 text-center">
      <h3>管理者ログイン</h3>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-12 col-md-10 col-lg-8 px-5 px-sm-0 mx-auto">
      <%= form_with model: @admin, url: admin_session_path do |f| %>
        <div class="field row my-3">
          <label for="email" class="col-sm-4 col-form-label">メールアドレス</label>
          <%= f.email_field :email, autofocus: true, class: "col-sm-8", placeholder: "sample@example.com" %>
        </div>

        <div class="field row mb-5">
          <label for="password" class="col-sm-4 col-form-label">パスワード</label>
          <%= f.password_field :password, class: "col-sm-8" %>
        </div>

        <div class="actions">
          <%= f.submit "ログイン", class: "btn btn-primary col-3 mx-auto d-block" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<%= render "admin/shared/links" %>
