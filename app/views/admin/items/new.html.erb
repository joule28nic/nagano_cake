<div class="container">
  <div class="row py-4">
    <div class="col-4 text-center">
      <h3>商品新規登録</h3>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-12 col-md-9 col-lg-6 px-5 px-sm-0 mx-auto">
      <%= form_with model: @item, url: admin_items_path do |f| %>
        <div class="field row my-3">
          <label for="image" class="col-sm-4 col-form-label">商品画像</label>
          <%= f.file_field :image, accept: "image/*", class: "col-sm-8", id: "image" %>
        </div>

        <div class="field row mb-3">
          <label for="name" class="col-sm-4 col-form-label">商品名</label>
          <%= f.text_field :name, class: "col-sm-7", placeholder: "商品名", id: "name" %>
        </div>

        <div class="field row mb-3">
          <label for="introduction" class="col-sm-4 col-form-label">商品説明</label>
          <%= f.text_area :introduction, class: "col-sm-7", rows: 5, placeholder: "ここに説明文を記述します", id: "introduction" %>
        </div>

        <div class="field row mb-3">
          <label class="col-sm-4 col-form-label">ジャンル</label>
          <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name), {include_blank: "--選択してください--"}, class: "col-sm-7" %>
        </div>

        <div class="field row mb-3">
          <label for="price" class="col-sm-4 col-form-label">税抜価格</label>
          <%= f.text_field :price, class: "col-sm-7", placeholder: "1000", id: "price" %>
          <label for="price" class="col-sm-1 col-form-label">円</label>
        </div>

        <div class="field row mb-5">
          <label class="col-sm-4 col-form-label">販売ステータス</label>
          <div class="col-3">
            <%= f.radio_button :is_active, "true", :checked => true %>
            <%= f.label :is_active, "販売中", {value: :true} %>
          </div>
          <div class="col-3">
            <%= f.radio_button :is_active, "false" %>
            <%= f.label :is_active, "販売停止中", {value: :false}  %>
          </div>
        </div>

        <div class="actions">
          <%= f.submit "新規登録", class: "btn btn-success col-3 mx-auto d-block" %>
        </div>

      <% end %>
    </div>
  </div>