<div class="container">

  <div class="row py-4">
    <div class="col-4 text-center">
      <h3>商品詳細</h3>
    </div>
  </div>

  <div class="row py-4">
    <div class="col-4">
      <% if @item.image.attached? %>
        <%= image_tag @item.image, class: "img-fluid w-100" %>
      <% else %>
        <%= image_tag 'default-image', class: "img-fluid w-100" %>
      <% end %>
    </div>

    <div class="col-8">
      <table class="table table-borderless">
        <tbody>
          <tr>
            <td class="col-3">商品名</td>
            <td class="col-9"><%= @item.name %></td>
          </tr>
          <tr>
            <td class="col-3">商品説明</td>
            <td class="col-9"><%= @item.introduction %></td>
          </tr>
          <tr>
            <td class="col-3">ジャンル</td>
            <td class="col-9"><%= @item.genre.name %></td>
          </tr>
          <tr>
            <td class="col-3">税込価格<br />(税抜価格)</td>
            <td class="col-9 align-middle"><%= @item.add_tax_price.to_s(:delimited, delimiter: ',') %> (<%= @item.price.to_s(:delimited, delimiter: ',') %>) 円</td>
          </tr>
          <tr>
            <td class="col-3">販売ステータス</td>
            <td class="col-9"><%= @item.is_active? ? '販売中' : '販売停止中' %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col-2 offset-5">
      <%= link_to "編集する", edit_admin_item_path(@item.id), class: "btn btn-success mx-auto d-block" %>
    </div>
  </div>
</div>