<div class="container">
  <div class="row py-4">
    <div class="col-4 text-center">
      <h3>注文履歴一覧</h3>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-12 col-md-11 col-lg-10 mx-auto">
      <table class="table">
        <thead class="table-active">
          <tr>
            <th style="width: 25%">購入日時</th>
            <th style="width: 25%">購入者</th>
            <th style="width: 20%">注文個数</th>
            <th style="width: 30%">注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td><%= link_to order.created_at.strftime("%Y/%m/%d %H:%M:%S"), admin_order_path(order) %></td>
              <td><%= order.customer.name %></td>
              <td><%= order.order_details.sum(:amount) %></td>
              <td><%= order.status_i18n %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @orders, theme: 'twitter-bootstrap-4' %>
    </div>
  </div>

</div>