<div class="container">
  <div class="row py-4">
    <div class="col-5 text-center">
      <h3><%= @customer.name %>さんの会員情報編集</h3>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12 col-lg-11 px-5 px-sm-0 mx-auto">
      <div class="row">
        <label class="col-3 col-form-label">会員ID</label>
        <label class="col-3 col-form-label"><%= @customer.id %></label>
      </div>

      <%= form_with model: @customer, url: admin_customer_path do |f| %>

        <div class="field row my-3">
          <label for="last_name" class="col-sm-3 col-form-label">氏名</label>
          <%= f.text_field :last_name, autofocus: true, class: "col-sm-3", id: "last_name" %>
          <%= f.text_field :first_name, class: "col-sm-3 offset-1" %>
        </div>

        <div class="field row mb-3">
          <label for="last_name_kana" class="col-sm-3 col-form-label">フリガナ</label>
          <%= f.text_field :last_name_kana, class: "col-sm-3", id: "last_name_kana" %>
          <%= f.text_field :first_name_kana, class: "col-sm-3 offset-1" %>
        </div>

        <div class="field row mb-3">
          <label for="postal_code" class="col-sm-3 col-form-label">郵便番号</label>
          <%= f.text_field :postal_code, class: "col-sm-3", id: "postal_code" %>
        </div>

        <div class="field row mb-3">
          <label for="address" class="col-sm-3 col-form-label">住所</label>
          <%= f.text_field :address, class: "col-sm-7", id: "address" %>
        </div>

        <div class="field row mb-3">
          <label for="telephone_number" class="col-sm-3 col-form-label">電話番号</label>
          <%= f.text_field :telephone_number, class: "col-sm-3", id: "telephone_number" %>
        </div>

        <div class="field row mb-3">
          <label for="email" class="col-sm-3 col-form-label">メールアドレス</label>
          <%= f.email_field :email, class: "col-sm-7", id: "email" %>
        </div>

        <div class="field row mb-5">
          <label class="col-sm-3 col-form-label">会員ステータス</label>
          <div class="col-3">
            <%= f.radio_button :is_active, "true", :checked => @customer.is_active == true %>
            <%= f.label :is_active, "有効", {value: :true} %>
          </div>
          <div class="col-3">
            <%= f.radio_button :is_active, "false", :checked => @customer.is_active == false %>
            <%= f.label :is_active, "退会", {value: :false} %>
          </div>
        </div>

        <div class="actions">
          <%= f.submit "変更を保存", class: "btn btn-success col-3 mx-auto d-block" %>
        </div>

      <% end %>
    </div>
  </div>
</div>