<div class="container">
  <div class="row py-4">
    <div class="col-4 text-center">
      <h3><%= @customer.name %>さんの会員情報</h3>
    </div>
  </div>
  <div class="row pb-3">
    <div class="col-8">
      <table class="table">
        <tbody>
          <tr>
            <th>会員ID</th>
            <th><%= @customer.id %></th>
          </tr>
          <tr>
            <th>氏名</th>
            <th><%= @customer.full_name %></th>
          </tr>
          <tr>
            <th>フリガナ</th>
            <th><%= @customer.full_name_kana %></th>
          </tr>
          <tr>
            <th>郵便番号</th>
            <th><%= @customer.postal_code %></th>
          </tr>
          <tr>
            <th>住所</th>
            <th><%= @customer.address %></th>
          </tr>
          <tr>
            <th>電話番号</th>
            <th><%= @customer.telephone_number %></th>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <th><%= @customer.email %></th>
          </tr>
          <tr>
            <th>会員ステータス</th>
            <th><%= @customer.is_active? ? '有効' : '退会' %></th>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row mx-auto">
    <div class="col-3 offset-3">
      <%= link_to "編集する", edit_admin_customer_path(@customer.id), class: "btn btn-success btn-block" %>
    </div>
    <div class="col-3">
      <%= link_to "注文履歴一覧を見る", admin_customers_path(@customer.id), class: "btn btn-primary btn-block" %>
    </div>
  </div>
</div>