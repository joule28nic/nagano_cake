<div class="container">
  <div class="row py-4">
    <div class="col-4 text-center">
      <h3>会員一覧</h3>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-12 col-md-11 col-lg-10 mx-auto">
      <table class="table">
        <thead class="table-active">
          <tr>
            <th style="width: 15%">会員ID</th>
            <th style="width: 25%">氏名</th>
            <th style="width: 40%">メールアドレス</th>
            <th style="width: 20%">ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
          <tr>
            <td class="align-middle"><%= customer.id %></td>
            <td class="align-middle"><%= link_to customer.name, admin_customer_path(customer) %></td>
            <td class="align-middle"><%= customer.email %></td>
            <td class="align-middle"><%= customer.is_active? ? '有効' : '退会' %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <div class="col d-flex justify-content-center">
        <%= paginate @customers, theme: 'twitter-bootstrap-4' %>
      </div>
    </div>
  </div>
</div>