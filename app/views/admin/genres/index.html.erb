<div class="container">
  <div class="row py-4">
    <div class="col-4 text-center">
      <h3>ジャンル一覧・追加</h3>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <%= form_with model: @new_genre, url: admin_genres_path do |f| %>
        <div class="form-group row my-4">
          <label for="name", class="col-sm-2 col-form-label">ジャンル名</label>
          <%= f.text_field :name, class: "col-sm-3", placeholder: "ジャンル名" %>
          <div class="actions col-2">
            <%= f.submit "新規登録", class: "btn btn-success mx-auto d-block" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="row">
    <table class="col-5 table">
      <thead class="table-active">
        <tr>
          <th style="width: 70%">ジャンル</th>
          <th style="width: 30%"></th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td class="align-middle"><%= genre.name %></td>
            <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success mx-auto d-block" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

</div>