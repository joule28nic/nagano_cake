<div class="container">

  <div class="row py-4">
    <div class="col-4 text-center">
      <h3>ジャンル編集</h3>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <%= form_with model: @genre, url: admin_genre_path do |f| %>
        <div class="form-group row my-4">
          <label for="name", class="col-sm-2 col-form-label">ジャンル名</label>
          <%= f.text_field :name, class: "col-sm-3", placeholder: "ジャンル名" %>
          <div class="actions col-2">
            <%= f.submit "変更を保存", class: "btn btn-success mx-auto d-block" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

</div>